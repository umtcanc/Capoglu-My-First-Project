$(".js-open-menu").click(function(){$(".header-menu").toggleClass("active"),$(window).width()<992&&$("body, html").toggleClass("scroll-disabled")}),$(".js-open-sub-menu").click(function(){$(this).hasClass("active")?$(this).removeClass("active"):($(".js-open-sub-menu").removeClass("active"),$(this).addClass("active"))});var trailerSlider=new Swiper(".trailer-slider",{loop:!0,spaceBetween:0,speed:700,slidesPerView:1,navigation:{nextEl:".swiper-button-next.trailer-slider-nav-next",prevEl:".swiper-button-prev.trailer-slider-nav-prev"}}),gameSlider=new Swiper(".game-slider",{loop:!1,spaceBetween:120,speed:700,slidesPerView:1.3,slideVisibleClass:"is-visible",slideActiveClass:"active",watchSlidesVisibility:!0,observer:!0,observeParents:!0,watchSlidesProgress:!0,pagination:{el:".nav-pagination.swiper-pagination",clickable:!0}});